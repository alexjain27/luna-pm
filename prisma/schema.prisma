generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  CLIENT
}

enum WorkspaceType {
  CLIENT
  COMPANY
}

enum TaskApprovalStatus {
  PENDING
  APPROVED
  REJECTED
}

enum TaskStatusState {
  ACTIVE
  ARCHIVED
}

enum TaskPriority {
  URGENT
  HIGH
  NORMAL
  LOW
}

enum ProjectStatus {
  INTAKE
  PENDING
  ACTIVE
  ARCHIVED
}

model User {
  id               String    @id @default(cuid())
  name             String?
  email            String?   @unique
  emailVerified    DateTime?
  image            String?
  role             UserRole  @default(CLIENT)
  workspaceId      String?
  workspace        Workspace? @relation("WorkspaceUsers", fields: [workspaceId], references: [id])
  primaryWorkspace Workspace? @relation("WorkspacePrimaryUser")
  accounts         Account[]
  sessions         Session[]
  messages         ProjectMessage[]
  taskComments     TaskComment[]
  fileUploads      File[]
  commentFiles     TaskCommentFile[]
  approvals        TaskApproval[]
  requestedTasks   Task[]   @relation("TaskRequestor")
  ownedTasks       Task[]   @relation("TaskOwner")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Workspace {
  id            String        @id @default(cuid())
  name          String
  slug          String        @unique
  type          WorkspaceType
  address       String
  primaryUser   User?         @relation("WorkspacePrimaryUser", fields: [primaryUserId], references: [id])
  primaryUserId String?       @unique
  users         User[]        @relation("WorkspaceUsers")
  projects      Project[]
  tasks         Task[]
  folders       Folder[]
  files         File[]
  customFields  WorkspaceCustomField[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Project {
  id                String                  @id @default(cuid())
  workspaceId       String
  workspace         Workspace               @relation(fields: [workspaceId], references: [id])
  name              String
  status            ProjectStatus           @default(INTAKE)
  startDate         DateTime?
  endDate           DateTime?
  description       String?
  lists             List[]
  tasks             Task[]
  folders           Folder[]
  files             File[]
  messages          ProjectMessage[]
  customFieldValues ProjectCustomFieldValue[]
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt
}

model WorkspaceCustomField {
  id          String                  @id @default(cuid())
  workspaceId String
  workspace   Workspace               @relation(fields: [workspaceId], references: [id])
  name        String
  type        String
  options     String[]
  order       Int
  values      ProjectCustomFieldValue[]
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt

  @@unique([workspaceId, name])
}

model ProjectCustomFieldValue {
  id            String               @id @default(cuid())
  projectId     String
  project       Project              @relation(fields: [projectId], references: [id])
  customFieldId String
  customField   WorkspaceCustomField @relation(fields: [customFieldId], references: [id])
  value         String
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt

  @@unique([projectId, customFieldId])
}

model Folder {
  id          String    @id @default(cuid())
  name        String
  parentId    String?
  parent      Folder?   @relation("FolderHierarchy", fields: [parentId], references: [id])
  children    Folder[]  @relation("FolderHierarchy")
  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  projectId   String?
  project     Project?  @relation(fields: [projectId], references: [id])
  files       File[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model List {
  id        String     @id @default(cuid())
  projectId String
  project   Project    @relation(fields: [projectId], references: [id])
  name      String
  tasks     ListTask[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model ListTask {
  id     String @id @default(cuid())
  listId String
  taskId String
  list   List   @relation(fields: [listId], references: [id])
  task   Task   @relation(fields: [taskId], references: [id])

  @@unique([listId, taskId])
}

model TaskStatus {
  id        String          @id @default(cuid())
  name      String
  color     String
  order     Int
  state     TaskStatusState @default(ACTIVE)
  isDefault Boolean         @default(false)
  tasks     Task[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model Task {
  id               String          @id @default(cuid())
  workspaceId      String
  workspace        Workspace       @relation(fields: [workspaceId], references: [id])
  projectId        String?
  project          Project?        @relation(fields: [projectId], references: [id])
  statusId         String
  status           TaskStatus      @relation(fields: [statusId], references: [id])
  name             String
  description      String?
  requestorId      String?
  requestor        User?           @relation("TaskRequestor", fields: [requestorId], references: [id])
  ownerId          String?
  owner            User?           @relation("TaskOwner", fields: [ownerId], references: [id])
  parentTaskId     String?
  parentTask       Task?           @relation("Subtasks", fields: [parentTaskId], references: [id])
  subtasks         Task[]          @relation("Subtasks")
  lists            ListTask[]
  startDate        DateTime?
  dueDate          DateTime?
  priority         TaskPriority    @default(NORMAL)
  tags             String[]
  timeEstimate     Int?
  points           Int?
  dependencies     TaskDependency[] @relation("TaskDependencies")
  dependents       TaskDependency[] @relation("TaskDependents")
  requiresApproval Boolean         @default(false)
  approval         TaskApproval?
  comments         TaskComment[]
  files            TaskFile[]
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
}

model TaskDependency {
  id          String @id @default(cuid())
  taskId      String
  dependsOnId String
  task        Task   @relation("TaskDependencies", fields: [taskId], references: [id])
  dependsOn   Task   @relation("TaskDependents", fields: [dependsOnId], references: [id])

  @@unique([taskId, dependsOnId])
}

model TaskApproval {
  id          String             @id @default(cuid())
  taskId      String             @unique
  task        Task               @relation(fields: [taskId], references: [id])
  status      TaskApprovalStatus @default(PENDING)
  decidedById String?
  decidedBy   User?              @relation(fields: [decidedById], references: [id])
  decidedAt   DateTime?
  note        String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
}

model TaskComment {
  id              String            @id @default(cuid())
  taskId          String
  task            Task              @relation(fields: [taskId], references: [id])
  authorId        String
  author          User              @relation(fields: [authorId], references: [id])
  body            String
  parentCommentId String?
  parentComment   TaskComment?      @relation("CommentThread", fields: [parentCommentId], references: [id])
  replies         TaskComment[]     @relation("CommentThread")
  files           TaskCommentFile[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model TaskCommentFile {
  id            String      @id @default(cuid())
  taskCommentId String
  taskComment   TaskComment @relation(fields: [taskCommentId], references: [id])
  uploaderId    String
  uploader      User        @relation(fields: [uploaderId], references: [id])
  filename      String
  s3Key         String
  size          Int
  mimeType      String
  createdAt     DateTime    @default(now())
}

model ProjectMessage {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model File {
  id          String    @id @default(cuid())
  projectId   String?
  project     Project?  @relation(fields: [projectId], references: [id])
  workspaceId String?
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  folderId    String?
  folder      Folder?   @relation(fields: [folderId], references: [id])
  uploaderId  String
  uploader    User      @relation(fields: [uploaderId], references: [id])
  filename    String
  s3Key       String
  size        Int
  mimeType    String
  tasks       TaskFile[]
  createdAt   DateTime  @default(now())
}

model TaskFile {
  id     String @id @default(cuid())
  taskId String
  fileId String
  task   Task   @relation(fields: [taskId], references: [id])
  file   File   @relation(fields: [fileId], references: [id])

  @@unique([taskId, fileId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
